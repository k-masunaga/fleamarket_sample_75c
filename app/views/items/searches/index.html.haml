= render "shared/header"
.item
  = render "items/searches/search-zone"
  .item__body#short
    .item__body__title
      詳細検索結果一覧
    .item__body__lists
      .item__body__lists__sort
        .item__body__lists__sort__price
        %thead
          %tr
            %th= sort_link(@q, :created_at, "出品順", default_order: :desc)
        .item__body__lists__sort__created-at
        %thead
          %tr
            %th= sort_link(@q, :price, "価格順")

      - @items.each do |item|
        -if item.auction_status == '売り切れ'
          .item__body__lists__list
            = link_to item_path(item.id) do
              %figure.list__img
                = image_tag item.item_images.first.item_image.url if item.item_images.first.present?
              .list__body
                %h3.name
                  = item.name
                .list__price
                  %ul
                    %li
                      = item.price.to_s(:delimited)
                      円
                    %li
                      = icon('fa', 'star')
                      = item.likes.count
                  %p (税込)
              .list__sold
                .list__sold__inner
                  sold
        - else
          .item__body__lists__list
            = link_to item_path(item.id) do
              %figure.list__img
                = image_tag item.item_images.first.item_image.url if item.item_images.first.present?
              .list__body
                %h3.name
                  = item.name
                .list__price
                  %ul
                    %li
                      = item.price.to_s(:delimited)
                      円
                    %li
                      = icon('fa', 'star')
                  %p (税込)
= render "shared/footer"
= render "items/sell-tab"