.sell
  = render 'single-container'

  -# メインの部分
  = form_with(model: @item, local: true, multipart: true) do |f|
    .sell__container
      .sell__container__main
        .sell__container__main__wrapper
          %h2.sell__container__main__wrapper__head 商品の情報を入力


          -# 画像投稿フォーム
        .sell__container__main__sell-upload
          %label
            出品画像
          %span.form-require
            必須
          %p 最大10枚までアップロードできます
          .sell__container__main__sell-upload__image
            .sell__container__main__sell-upload__image__box
              .sell__container__main__sell-upload__image__box__inside
                .sell__container__main__sell-upload__image__box__inside__file
                  %label{class: "input-box__image"}
                    = icon('fas', 'camera')
                    = f.file_field :item_image, class: "input-box__file"
                    %p ドラッグアンドドロップ<br>またはクリックしてファイルをアップロード


                  -# 画像投稿フォームを整理したらcameraアイコンの設置箇所を正す


                -# 商品名の部分
        .sell__container__main__form
          .sell__container__main__form__group
            .sell__container__main__form__group__name
              %label
                商品名
                %span.form-require
                  必須
              %div
                = f.text_field :name, class: "sell__container__main__form__group__input", placeholder: "40文字まで"
          .sell__container__main__form__explanation
            .sell__container__main__form__explanation__name
              %label
                商品の説明
                %span.form-require
                  必須
              = f.text_area :explanation,class: 'sell__container__main__form__explanation__default', placeholder: '商品の説明(必須 1,000文字以内)(色、素材、重さ、定価、注意点など)例)2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。'
              -# = render partial: 'error-messages', locals: {product: f.object, column: 'name'}

            -# 商品の詳細部分
        .sell__container__main__form.clearfix
          %h3.sell__container__main__form__sub-head 
            商品の詳細
          .sell__container__main__form__box
            .sell__container__main__form__box__category
              %label
                カテゴリー
                %span.form-require
                  必須
                
                .select--wrap{id: "category__box--parent"}
                  = f.collection_select :category_ids, @parents, :id, :name,{prompt: "---"}, class: "select-default", id: "parent-form", name: 'item[category_ids][]'
                  -# Category.all.limit(13), :id, :name,{prompt:"---"},{class:"select--wrap-cat1__default-category1", id: "parent_form"}
            .sell__container__main__form__box__brand
              %label
                ブランド
                %span.form-require__brand
                  任意
              .sell__container__main__form__box__brand__select
                = f.fields_for :brand do |b|
                  = b.text_field :name, placeholder: '例）シャネル'
            .sell__container__main__form__box__condition
              %label
                商品の状態
                %span.form-require
                  必須
                -# .select--wrap
                -#   = f.select :status, Item.statuses.keys, {prompt:"---"},{class:"select--wrap__default"}
                -#   %i.fas.fa-angle-down

          -# 配送についての部分
        .sell__container__main__delivery
          %h3.sell__container__main__delivery__sub-head
            配送について
          = link_to "#"
          .sell__container__main__delivery__box
            .sell__container__main__delivery__box__top
              %label
                配送料の負担
                %span.form-require
                  必須
              .sell__container__main__delivery__box__select
                -# = f.select :fee_burden, Shipping.fee_burdens.keys, {prompt: "---"},{class: " "}
            .sell__container__main__delivert__box__middle
              %label
                発送元の地域
                %span.form-require
                  必須
              .sell__container__main__delivery__box__select
                -# = f.select :area, Shipping.areas.keys, {prompt: "---"},{class: " "}
            .sell__container__main__delivery__box__bottom
              %label
                発送までの日数
                %span.form-require
                  必須
              .sell__container__main__delivery__box__select
                -# = f.select :handling_time, Shipping.handling_times.keys, {prompt: "---"},{class: " "}

          -# 価格の部分
        .sell__container__main__price
          %h3.sell__container__main__price__sub-head
            販売価格(¥300~9,999,999)
            -# link_toを追加




