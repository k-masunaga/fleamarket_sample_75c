.signup-container
  = render '/signup/index-header'

.body
  .body__contents
    .body__contents__topic
      支払い方法
    .body__contents__info
      .body__contents__info__way
        クレジットカード
      .body__contents__info__number
        = "**** **** **** " + @default_card_information.last4
      .body__contents__info__expiration-date
        = "有効期限:"
        - exp_month = @default_card_information.exp_month.to_s
        - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
        = exp_month + " / " + exp_year
      .body__contents__info__image
        = image_tag "cards/#{@card_src}", alt: @card_brand, size: "45x30"

.signup-container
  = render '/signup/footer'