.mypage-main__card__show
  .mypage-main__card__show__title
    クレジットカード
  .mypage-main__card__show__info
    = image_tag "cards/#{@card_src}", alt: @card_brand, size: "45x30"
    .mypage-main__card__show__info__number
      = "**** **** **** " + @default_card_information.last4
    .mypage-main__card__show__info__limit
      = "有効期限:"
      - exp_month = @default_card_information.exp_month.to_s
      - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
      = exp_month + " / " + exp_year
  .mypage-main__card__show__delete-btn
    = link_to "削除する", delete_card_index_path,  method: :post