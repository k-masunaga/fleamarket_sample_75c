.signup-index-main
  .login-index-main__head
    %p
      アカウントをお持ちでない方はこちら
    = link_to '/signup/registration_user_information', class: 'login-index-main__head--btn-registration' do
      新規会員登録
  .signup-index-main__inner
    = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: 'signup-index-main__inner--btn-default signup-index-main__inner--btn-google' do
      = image_tag src='google.png'
      Googleでログインする
    = link_to user_facebook_omniauth_authorize_path, method: :post, class: 'signup-index-main__inner--btn-default signup-index-main__inner--btn-facebook' do
      = icon 'fab', 'facebook-square'
      Facebookでログインする
    = link_to '#', method: :post, class: 'signup-index-main__inner--btn-default signup-index-main__inner--btn-apple' do
      = icon 'fab', 'apple'
      Appleでログインする
  .signup-registration-main__inner
    .login_error_text
      = flash[:alert]
    = form_for(resource, as: resource_name, url: session_path(resource_name), action: '/login/', method: 'POST', novalidate: 'novalidate') do |f|
      .field
        .field__input
          = f.email_field :email, placeholder: 'メールアドレス', autofocus: true, autocomplete: 'email'
        .field__input
          = f.password_field :password, placeholder: 'パスワード', class:'field__input__send-name', autocomplete: 'current-password'
      .field
        = f.submit "ログイン", class: 'red-btn'
  .login__password-forget
    %p
      = link_to 'パスワードをお忘れの方', '#' 
      
