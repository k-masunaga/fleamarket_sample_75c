#account-page.account-page
  .acoount-page__header
    .account-page__header--logo
      = image_tag src="logo.png", size: "180x50"
  .account-page__inner
    .account-page__inner--right
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field__header
          %h4 ユーザー情報
        .field
          .field-label
            = f.label :ニックネーム
          .field-input
            = f.text_field :nickname, autofocus: true
        .field
          .field-label
            = f.label :メールアドレス
          .field-input
            = f.email_field :email
        .field
          .field-label
            = f.label :パスワード
            %i (英数字8文字以上)
          .field-input
            = f.password_field :password, autocomplete: "off"
        .field
          .field-label
            = f.label :パスワード確認用
          .field-input
            = f.password_field :password_confirmation, autocomplete: "off"
        .field
          .field-label
            = f.label :firstname
          .field-input
            = f.text_field :firstname
        .field
          .field-label
            = f.label :lastname
          .field-input
            = f.text_field :lastname
        .actions
          = f.submit "アカウント作成", class: 'btn'
